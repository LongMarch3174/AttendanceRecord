<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/attendance_background"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/attendance_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到时间"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/attendance_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/attendance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事项名称"
        android:textSize="16sp"
        android:textColor="#FF0000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/attendance_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="描述"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/attendance_created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建时间"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/attendance_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止时间"
        android:textSize="16sp"
        android:textColor="#666666" />

</LinearLayout>
